/**
 *
 * @author Aman
 */
public class MenuButton {
    public Rectangle menuButton = new Rectangle(1250, 5, 105, 50);
    
    public void menuButton (Graphics g){
           Graphics2D wrx = (Graphics2D)g;
           Font buttonFont = new Font("old english text", Font.BOLD, 30);
           g.setColor(Color.black);
           g.fillRect(1250, 5, 105, 50);
           g.setFont(buttonFont);
           g.setColor(Color.white);
           g.drawString("MENU", menuButton.x + 10, menuButton.y + 35);
           wrx.draw(menuButton);
    }
}
